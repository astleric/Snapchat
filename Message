    <script>
        function showMessage1() {
            document.querySelector(".touch-indicator").style.display = "none"; // Hide touch indicator
            document.getElementById("typing1").style.display = "block";

            setTimeout(() => {
                document.getElementById("typing1").style.display = "none";
                document.getElementById("message1").style.display = "block";

                setTimeout(() => {
                    document.getElementById("andBtn").style.display = "block";
                }, 500);
            }, 3000);
        }

        function showMessage2() {
            document.getElementById("typing2").style.display = "block";

            setTimeout(() => {
                document.getElementById("typing2").style.display = "none";
                document.getElementById("message2").style.display = "block";
            }, 3000);
        }
    </script>

